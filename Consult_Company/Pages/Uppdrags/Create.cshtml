@page
@using Consulting_Company.Model
@model Consult_Company.Pages.Uppdrags.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Uppdrag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Uppdrag.Name" class="control-label"></label>
                <input asp-for="Uppdrag.Name" class="form-control" />
                <span asp-validation-for="Uppdrag.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uppdrag.Description" class="control-label"></label>
                <input asp-for="Uppdrag.Description" class="form-control" />
                <span asp-validation-for="Uppdrag.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uppdrag.StartDate" class="control-label"></label>
                <input asp-for="Uppdrag.StartDate" class="form-control" />
                <span asp-validation-for="Uppdrag.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uppdrag.EndDate" class="control-label"></label>
                <input asp-for="Uppdrag.EndDate" class="form-control" />
                <span asp-validation-for="Uppdrag.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uppdrag.Priority" class="control-label"></label>
                <select asp-for="Uppdrag.Priority" class="form-control" asp-items="@Html.GetEnumSelectList<Uppdrag.Prio>()">
                    <option selected="selected" value="">Please select</option>
                </select>                
                <span asp-validation-for="Uppdrag.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uppdrag.TaskRoles" class="control-label"></label>
                <select asp-for="Uppdrag.TaskRoles" class="form-control" asp-items="@Html.GetEnumSelectList<Uppdrag.TaskRole>()">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Uppdrag.TaskRoles" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
